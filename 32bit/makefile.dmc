target  = blzpack.exe
objects = blzpack.obj brieflz.obj depack.obj crc32.obj
temps   = blzpack.map

cflags  = -s -mn -o+all
ldflags = $(cflags)

.PHONY: all clean

all: $(target)

$(target): $(objects)
	dmc $(ldflags) -o$@ $^

%.obj : %.c
	dmc $(cflags) -c $<

%.obj : %.nas
	nasm -o $@ -f obj -D_OBJ_ -O3 $<

clean:
	$(RM) $(objects) $(target) $(temps)
